{
  "system": {
    "exclude_path": "rules/**,skills/**,AGENTS.md,RULES_INDEX.md,PROJECT.md,*_ANALYSIS.md"
  },
  "plugins": {
    "first-line-heading": {
      "enabled": false
    },
    "heading-style": {
      "enabled": false
    },
    "heading-start-left": {
      "enabled": false
    },
    "blanks-around-headings": {
      "enabled": false
    },
    "line-length": {
      "enabled": false
    },
    "blanks-around-fences": {
      "enabled": false
    },
    "blanks-around-lists": {
      "enabled": false
    }
  }
}
